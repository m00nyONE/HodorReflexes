<GuiXml>
    <Controls>
        <Control name="HodorReflexes_Dps_DamageList_Header" virtual="true">
            <Dimensions y="22" />
            <Controls>
                <Texture name="$(parent)_BG" color="000000" alpha="0.8" hidden="false">
                    <AnchorFill />
                </Texture>
                <Label name="$(parent)_Title" horizontalAlignment="LEFT" font="$(MEDIUM_FONT)|$(KB_16)|outline" text="title" wrapMode="TRUNCATE">
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" offsetX="2"/>
                </Label>
                <Label name="$(parent)_Time" horizontalAlignment="RIGHT" font="$(MEDIUM_FONT)|$(KB_16)|outline" text="0:00.0" wrapMode="TRUNCATE">
                    <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="$(parent)" offsetX="-2"/>
                </Label>
            </Controls>
        </Control>
        <Control name="HodorReflexes_Dps_DamageList_Summary" virtual="true">
            <Dimensions y="22" />
            <Controls>
                <Texture name="$(parent)_BG" color="000000" alpha="0.8" hidden="false">
                    <AnchorFill />
                </Texture>
                <Label name="$(parent)_Title" horizontalAlignment="LEFT" font="$(MEDIUM_FONT)|$(KB_16)|outline" text="Group total:" wrapMode="TRUNCATE">
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" offsetX="2"/>
                </Label>
                <Label name="$(parent)_Value" horizontalAlignment="RIGHT" font="$(MEDIUM_FONT)|$(KB_16)|outline" text="0.0K (0.0K)" wrapMode="TRUNCATE">
                    <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="$(parent)" offsetX="-2"/>
                </Label>
            </Controls>
        </Control>
        <Control name="HodorReflexes_Dps_DamageList_DamageRow" virtual="true" mouseEnabled="false">
            <Dimensions y="22" />
            <Controls>
                <Texture name="$(parent)_BG" color="000000" hidden="false">
                    <AnchorFill />
                </Texture>
                <Texture name="$(parent)_Icon" textureFile="esoui/art/icons/class/class_nightblade.dds">
                    <Dimensions x="22" y="22" />
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" offsetX="2"/>
                </Texture>
                <Label name="$(parent)_Value" horizontalAlignment="RIGHT" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_19)|outline" text="192.5K" wrapMode="TRUNCATE">
                    <Dimensions x="90" y="22" />
                    <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="$(parent)" offsetX="-2"/>
                </Label>
                <Label name="$(parent)_Name" horizontalAlignment="LEFT" font="$(BOLD_FONT)|$(KB_18)|outline" text="@Player" wrapMode="TRUNCATE" maxLineCount="1">
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_Icon" offsetX="5"/>
                    <Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$(parent)_Value" offsetX="-3"/>
                </Label>
            </Controls>
        </Control>
    </Controls>
</GuiXml>