<GuiXml>
    <Controls>
        <Control name="HodorReflexes_Ult_CompactList_Header" virtual="true">
            <Dimensions y="60" />
            <Controls>
                <Texture name="$(parent)_BG" color="000000" alpha="0.0" hidden="false">
                    <AnchorFill />
                </Texture>

                <Control name="$(parent)_Horn">
                    <Dimensions x="40" y="60"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="0" offsetY="0"/>
                    <Controls>
                        <Texture name="$(parent)_Icon" textureFile="/esoui/art/icons/ability_ava_003.dds">
                            <Dimensions x="28" y="28"/>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="6"/> <!-- 24px offset -->
                        </Texture>
                        <Label name="$(parent)_Duration" horizontalAlignment="center" font="$(MEDIUM_FONT)|$(KB_22)|outline" text="0.0" wrapMode="TRUNCATE">
                            <Dimensions x="50" y="24"/>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)_Icon" offsetX="0" offsetY="2" />
                        </Label>
                    </Controls>
                </Control>

                <Control name="$(parent)_Force">
                    <Dimensions x="40" y="60"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)_Horn" offsetX="0" offsetY="0"/>
                    <Controls>
                        <Texture name="$(parent)_Icon" textureFile="/esoui/art/icons/ability_buff_major_force.dds">
                            <Dimensions x="28" y="28"/>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="6"/>
                        </Texture>
                        <Label name="$(parent)_Duration" horizontalAlignment="center" font="$(MEDIUM_FONT)|$(KB_22)|outline" text="0.0" wrapMode="TRUNCATE">
                            <Dimensions x="50" y="24"/>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)_Icon" offsetX="0" offsetY="2" />
                        </Label>
                    </Controls>
                </Control>

                <Control name="$(parent)_Vuln">
                    <Dimensions x="40" y="60"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)_Force" offsetX="0" offsetY="0"/>
                    <Controls>
                        <Texture name="$(parent)_Icon" textureFile="/esoui/art/icons/ability_necromancer_006.dds">
                            <Dimensions x="28" y="28"/>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="6"/>
                        </Texture>
                        <Label name="$(parent)_Duration" horizontalAlignment="center" font="$(MEDIUM_FONT)|$(KB_22)|outline" text="0.0" wrapMode="TRUNCATE">
                            <Dimensions x="50" y="24"/>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)_Icon" offsetX="0" offsetY="2" />
                        </Label>
                    </Controls>
                </Control>

                <Control name="$(parent)_Berserk">
                    <Dimensions x="40" y="60"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)_Vuln" offsetX="0" offsetY="0"/>
                    <Controls>
                        <Texture name="$(parent)_Icon" textureFile="/esoui/art/icons/ability_sorcerer_greater_storm_atronach.dds">
                            <Dimensions x="28" y="28"/>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="6"/>
                        </Texture>
                        <Label name="$(parent)_Duration" horizontalAlignment="center" font="$(MEDIUM_FONT)|$(KB_22)|outline" text="0.0" wrapMode="TRUNCATE">
                            <Dimensions x="50" y="24"/>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)_Icon" offsetX="0" offsetY="2" />
                        </Label>
                    </Controls>
                </Control>

                <Control name="$(parent)_Slayer">
                    <Dimensions x="40" y="60"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)_Berserk" offsetX="0" offsetY="0"/>
                    <Controls>
                        <Texture name="$(parent)_Icon" textureFile="/esoui/art/icons/ability_buff_major_slayer.dds">
                            <Dimensions x="28" y="28"/>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="6"/>
                        </Texture>
                        <Label name="$(parent)_Duration" horizontalAlignment="center" font="$(MEDIUM_FONT)|$(KB_22)|outline" text="0.0" wrapMode="TRUNCATE">
                            <Dimensions x="50" y="24"/>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)_Icon" offsetX="0" offsetY="2" />
                        </Label>
                    </Controls>
                </Control>


                <Control name="$(parent)_Pillager">
                    <Dimensions x="40" y="60"/>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$(parent)" offsetX="0" offsetY="0"/>
                    <Controls>
                        <Texture name="$(parent)_Icon" textureFile="esoui/art/icons/ability_healer_030.dds">
                            <Dimensions x="28" y="28"/>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="6"/>
                        </Texture>
                        <Label name="$(parent)_Duration" horizontalAlignment="center" font="$(MEDIUM_FONT)|$(KB_22)|outline" text="0.0" wrapMode="TRUNCATE">
                            <Dimensions x="50" y="24"/>
                            <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="$(parent)_Icon" offsetX="0" offsetY="2" />
                        </Label>
                    </Controls>
                </Control>

            </Controls>
        </Control>
        <Control name="HodorReflexes_Ult_CompactList_PlayerRow" virtual="true" mouseEnabled="false">
            <Dimensions y="24" />
            <Controls>
                <Texture name="$(parent)_BG" color="000000" alpha="0.0" hidden="false">
                    <AnchorFill />
                </Texture>
                <Texture name="$(parent)_UltIcon" textureFile="/esoui/art/icons/ability_ava_003.dds" alpha="0.5">
                    <Dimensions x="24" y="24" />
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" offsetX="0" offsetY="0" />
                </Texture>
                <Label name="$(parent)_PctValue" horizontalAlignment="RIGHT" font="$(BOLD_FONT)|$(KB_19)|outline" text="0%">
                    <Dimensions x="50" y="24" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_UltIcon" offsetX="0" offsetY="0" />
                </Label>
                <Label name="$(parent)_RawValue" horizontalAlignment="RIGHT" font="$(MEDIUM_FONT)|$(KB_19)|outline" text="-">
                    <Dimensions x="30" y="24" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_PctValue" offsetX="4" offsetY="0" />
                </Label>
                <Texture name="$(parent)_Icon" textureFile="esoui/art/icons/class/class_templar.dds">
                    <Dimensions x="24" y="24" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_RawValue" offsetX="10" offsetY="0" />
                </Texture>
                <Label name="$(parent)_Name" horizontalAlignment="LEFT" font="$(BOLD_FONT)|$(KB_19)|outline" text="@Player" wrapMode="TRUNCATE" maxLineCount="1">
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_Icon" offsetX="5"/>
                    <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="$(parent)"/>
                </Label>
            </Controls>
        </Control>
    </Controls>
</GuiXml>