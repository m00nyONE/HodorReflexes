<GuiXml>
    <Controls>
        <Control name="HodorReflexes_Ult_ColosList_Header" virtual="true">
            <Dimensions y="28" />
            <Controls>
                <Texture name="$(parent)_BG" color="000000" alpha="0.0" hidden="false">
                    <AnchorFill />
                </Texture>
                <Texture name="$(parent)_Icon" textureFile="HodorReflexes/assets/ui/colos.dds">
                    <Dimensions x="28" y="28"/>
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" offsetX="4"/>
                </Texture>
                <Label name="$(parent)_Duration" horizontalAlignment="left" font="$(MEDIUM_FONT)|$(KB_22)|soft-shadow-thick" text="  0.0" wrapMode="TRUNCATE">
                    <Dimensions x="50" y="24"/>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_Icon" offsetX="2"/>
                </Label>
            </Controls>
        </Control>
        <Control name="HodorReflexes_Ult_ColosList_PlayerRow" virtual="true" mouseEnabled="false">
            <Dimensions y="24" />
            <Controls>
                <Texture name="$(parent)_BG" color="000000" alpha="0.0" hidden="false">
                    <AnchorFill />
                </Texture>
                <Label name="$(parent)_PctValue" horizontalAlignment="RIGHT" font="$(BOLD_FONT)|$(KB_19)|soft-shadow-thick" text="0%">
                    <Dimensions x="50" y="24" />
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" offsetX="0" offsetY="0" />
                </Label>
                <Label name="$(parent)_RawValue" horizontalAlignment="RIGHT" font="$(MEDIUM_FONT)|$(KB_19)|soft-shadow-thick" text="0">
                    <Dimensions x="30" y="24" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_PctValue" offsetX="4" offsetY="0" />
                </Label>
                <Texture name="$(parent)_Icon" textureFile="esoui/art/icons/class/class_templar.dds">
                    <Dimensions x="24" y="24" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_RawValue" offsetX="10" offsetY="0" />
                </Texture>
                <Label name="$(parent)_Name" horizontalAlignment="LEFT" font="$(BOLD_FONT)|$(KB_19)|soft-shadow-thick" text="@Player" wrapMode="TRUNCATE" maxLineCount="1">
                    <Dimensions x="105" y="24" />
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)_Icon" offsetX="3" offsetY="0" />
                </Label>
            </Controls>
        </Control>
    </Controls>
</GuiXml>